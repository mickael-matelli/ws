{%if pagination.pages_count > 1%}
    <nav aria-label="Page navigation">
      <ul class="pagination">
        {% if pagination.page>1 %}  
            <li class="page-item">
              <a class="page-link" href="{{ path(pagination.route,pagination.route_params|merge({'page': pagination.page-1})) }}" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
                <span class="sr-only">Previous</span>
              </a>
            </li>
        {%endif%}
        {% for p in range(max(pagination.page-4, 1),min(pagination.page+4, pagination.pages_count)) %}
                <li class="page-item">
                    <a{% if p == pagination.page %} class="page-link current-page"{% endif %} href="{{ path(pagination.route, 
    pagination.route_params|merge({'page': p})) }}">{{ p }}</a>
                </li>
            {% endfor %}
        {% if pagination.page<pagination.pages_count %}    
            <li class="page-item">
              <a class="page-link" href="{{ path(pagination.route,pagination.route_params|merge({'page': pagination.page+1})) }}" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
                <span class="sr-only">Next</span>
              </a>
            </li>
        {%endif%}
      </ul>
    </nav>    
{%endif%}
