{% extends 'base.html.twig' %}

{% block body %}
    <h1>Staff</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ staff.id }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ staff.firstName }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ staff.lastName }}</td>
            </tr>
            <tr>
                <th>Birthdate</th>
                <td>{% if staff.birthDate %}{{ staff.birthDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Hiringdate</th>
                <td>{% if staff.hiringDate %}{{ staff.hiringDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Matricule</th>
                <td>{{ staff.matricule }}</td>
            </tr>
            <tr>
                <th>Netsalary</th>
                <td>{{ staff.netSalary }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('staffs_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
